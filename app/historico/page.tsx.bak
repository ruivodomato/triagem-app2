'use client';

import React, { useEffect, useMemo, useState } from 'react';
import ScreenContainer from '@/components/ScreenContainer';
import { limparHistorico, listarHistorico, type RegistroHistorico } from '@/lib/historico';

function corRisco(risco: RegistroHistorico['risco']) {
  if (risco === 'alto') return 'text-red-600';
  if (risco === 'moderado') return 'text-yellow-600';
  return 'text-green-600';
}

function badgeRisco(risco: RegistroHistorico['risco']) {
  if (risco === 'alto') return 'bg-red-50 border-red-200 text-red-700';
  if (risco === 'moderado') return 'bg-yellow-50 border-yellow-200 text-yellow-700';
  return 'bg-green-50 border-green-200 text-green-700';
}

function labelRisco(risco: RegistroHistorico['risco']) {
  if (risco === 'alto') return 'ALTO';
  if (risco === 'moderado') return 'MODERADO';
  return 'BAIXO';
}

function formatarData(iso: string) {
  try {
    const d = new Date(iso);
    return d.toLocaleString('pt-BR', {
      year: 'numeric',
      month: '2-digit',
      day: '2-digit',
      hour: '2-digit',
      minute: '2-digit',
    });
  } catch {
    return iso;
  }
}

async function copiarTexto(texto: string) {
  try {
    if (navigator?.clipboard?.writeText) {
      await navigator.clipboard.writeText(texto);
      return true;
    }
  } catch {}
  try {
    const ta = document.createElement('textarea');
    ta.value = texto;
    ta.style.position = 'fixed';
    ta.style.left = '-9999px';
    document.body.appendChild(ta);
    ta.focus();
    ta.select();
    const ok = document.execCommand('copy');
    document.body.removeChild(ta);
    return ok;
  } catch {
    return false;
  }
}

export default function HistoricoPage() {
  const [dados, setDados] = useState<RegistroHistorico[]>([]);
  const [copiadoId, setCopiadoId] = useState<string | null>(null);

  useEffect(() => {
    setDados(listarHistorico());
  }, []);

  const total = dados.length;

  const listaOrdenada = useMemo(() => {
    return [...dados].sort((a, b) => (a.dataISO < b.dataISO ? 1 : -1));
  }, [dados]);

  async function onCopiar(reg: RegistroHistorico) {
    const ok = await copiarTexto(reg.textoCompartilhavel);
    if (!ok) alert('Não consegui copiar automaticamente. Selecione e copie manualmente.');
    setCopiadoId(reg.id);
    setTimeout(() => setCopiadoId(null), 2000);
  }

  function onWhatsApp(reg: RegistroHistorico) {
    const url = `https://wa.me/?text=${encodeURIComponent(reg.textoCompartilhavel)}`;
    window.open(url, '_blank');
  }

  function onLimpar() {
    const ok = confirm('Tem certeza que deseja apagar todo o histórico?');
    if (!ok) return;
    limparHistorico();
    setDados([]);
  }

  return (
    <ScreenContainer>
      <div className="flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between">
        <div>
          <h1 className="text-3xl font-semibold">Histórico</h1>
          <p className="mt-1 text-sm text-neutral-600">
            {total === 0 ? 'Nenhum registro ainda.' : `${total} registro(s) salvos.`}
          </p>
        </div>

        <div className="flex gap-2">
          <a
            href="/triagem"
            className="rounded-xl border bg-white px-4 py-2 text-sm shadow-sm hover:bg-neutral-50"
          >
            Nova triagem
          </a>

          <button
            type="button"
            onClick={onLimpar}
            disabled={total === 0}
            className="rounded-xl bg-black px-4 py-2 text-sm text-white disabled:opacity-50"
          >
            Limpar histórico
          </button>
        </div>
      </div>

      {total === 0 ? (
        <div className="mt-8 rounded-2xl border bg-white p-6 shadow-sm">
          <div className="text-lg font-semibold">Sem registros ainda</div>
          <p className="mt-2 text-sm text-neutral-600">
            Faça uma triagem e clique em <b>“Copiar orientação”</b> para salvar automaticamente aqui.
          </p>
          <div className="mt-4">
            <a href="/triagem" className="inline-flex rounded-xl bg-black px-4 py-2 text-white">
              Iniciar triagem
            </a>
          </div>
        </div>
      ) : (
        <div className="mt-8 grid gap-4">
          {listaOrdenada.map((reg) => (
            <div key={reg.id} className="rounded-2xl border bg-white p-5 shadow-sm">
              <div className="flex flex-col gap-2 sm:flex-row sm:items-start sm:justify-between">
                <div>
                  <div className="flex flex-wrap items-center gap-2">
                    <span className="text-lg font-semibold">{reg.sistema}</span>

                    <span className={`rounded-full border px-3 py-1 text-xs font-semibold ${badgeRisco(reg.risco)}`}>
                      {labelRisco(reg.risco)}
                    </span>
                  </div>

                  <div className="mt-1 text-sm text-neutral-600">{formatarData(reg.dataISO)}</div>

                  <div className="mt-3 text-sm">
                    <div>
                      <span className="font-medium">Sintomas:</span>{' '}
                      <span className="text-neutral-700">{reg.sintomas?.length ? reg.sintomas.join(', ') : '-'}</span>
                    </div>
                    <div className="mt-1">
                      <span className="font-medium">Alergias:</span>{' '}
                      <span className="text-neutral-700">{reg.alergias?.length ? reg.alergias.join(', ') : 'Nenhuma'}</span>
                    </div>
                    <div className="mt-1">
                      <span className="font-medium">Contexto:</span>{' '}
                      <span className="text-neutral-700">
                        {reg.idade !== null ? `${reg.idade} anos` : 'idade n/i'} •{' '}
                        {reg.dias !== null ? `${reg.dias} dias` : 'dias n/i'} • {reg.gestante ? 'gestante' : 'não gestante'}
                      </span>
                    </div>
                  </div>
                </div>

                <div className="flex flex-wrap gap-2">
                  <button
                    type="button"
                    onClick={() => onCopiar(reg)}
                    className="rounded-xl bg-black px-4 py-2 text-sm text-white hover:opacity-90"
                  >
                    {copiadoId === reg.id ? 'Copiado ✅' : 'Copiar'}
                  </button>

                  <button
                    type="button"
                    onClick={() => onWhatsApp(reg)}
                    className="rounded-xl bg-green-600 px-4 py-2 text-sm text-white hover:opacity-90"
                  >
                    WhatsApp
                  </button>
                </div>
              </div>

              <details className="mt-4">
                <summary className="cursor-pointer text-sm font-medium text-neutral-700 hover:underline">
                  Ver texto completo
                </summary>
                <pre className="mt-3 whitespace-pre-wrap rounded-xl border bg-neutral-50 p-4 text-xs text-neutral-800">
                  {reg.textoCompartilhavel}
                </pre>
              </details>

              <div className="mt-3 text-xs text-neutral-500">
                Risco: <span className={`${corRisco(reg.risco)} font-semibold`}>{labelRisco(reg.risco)}</span>
              </div>
            </div>
          ))}
        </div>
      )}
    </ScreenContainer>
  );
}
